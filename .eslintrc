{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true,
    },
    "plugins": ["import"],
    "extends": ["eslint:recommended", "plugin:import/warnings"],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "warn",
        "no-eval": "error",
        "import/first": "error"
    }
}
